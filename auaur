<script>
function change(id){
  document.querySelectorAll(".screen").forEach(s=>s.classList.remove("active"));
  document.getElementById(id).classList.add("active");
}

function start(){
  createStars();
  document.getElementById("bgm").volume=0.3;
  document.getElementById("bgm").play().catch(()=>{});
  setTimeout(()=>change("proposal"),3000);
}

function createStars(){
  for(let i=0;i<150;i++){
    let star=document.createElement("div");
    star.classList.add("star");
    star.style.top=Math.random()*100+"vh";
    star.style.left=Math.random()*100+"vw";
    document.body.appendChild(star);
  }
}

document.getElementById("ring").addEventListener("click",()=>{
  let ring=document.getElementById("ring");
  ring.classList.add("ringOpen");
  ring.innerHTML="üíç";
});

function yes(){
  change("final");

  for(let i=0;i<30;i++){
    let fire=document.createElement("div");
    fire.classList.add("fire");
    fire.innerHTML="‚ú®";
    fire.style.top=Math.random()*100+"vh";
    fire.style.left=Math.random()*100+"vw";
    document.body.appendChild(fire);
    setTimeout(()=>fire.remove(),1500);
  }

  setInterval(()=>{
    let heart=document.createElement("div");
    heart.classList.add("heart");
    heart.innerHTML="ü§ç";
    heart.style.left=Math.random()*100+"vw";
    document.body.appendChild(heart);
    setTimeout(()=>heart.remove(),5000);
  },500);
}
</script>

